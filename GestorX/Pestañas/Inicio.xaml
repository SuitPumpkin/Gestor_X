        <DrawingImage x:Key="Arrow2">
            <DrawingImage.Drawing>
                <DrawingGroup ClipGeometry="M0,0 V27 H146 V0 H0 Z">
                    <GeometryDrawing Geometry="F1 M146,27z M0,0z M17.8847,2C18.8942,2 17.0549,2.16957 16.6044,2.45455 12.7009,4.92392 9.11718,7.71362 5.35604,10.4091 2.42404,12.5103 -0.000195211,13.7637 4.44153,15.2727 10.1975,17.2283 16.1116,18.5366 22,20">
                        <GeometryDrawing.Pen>
                            <Pen Brush="#FF000000" Thickness="3" StartLineCap="Round" EndLineCap="Round" LineJoin="Miter" MiterLimit="1" />
                        </GeometryDrawing.Pen>
                    </GeometryDrawing>
                    <GeometryDrawing Geometry="F1 M146,27z M0,0z M144,23.1667C141.832,23.2699 130.698,24.5762 128.528,24.7222 117.63,25.4557 106.475,24.5535 95.6667,23.1667 81.5352,21.3533 67.8784,17.0651 53.9444,14.2222 42.3086,11.8483 30.8189,11.2412 19,11">
